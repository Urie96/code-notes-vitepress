.custom-block.row
    display: flex
    padding: 0
    &>*
        flex-grow: 0.2
        margin: 0 2px !important
        overflow: hidden
        transition: all 0.5s ease-in-out !important
        &:hover
            flex-shrink:0.4
        &:last-child
            flex-grow: 1
    

.vp-doc
    for code in 'zsh' 'http' 'nginx' 'docker' 'makefile' 'diff' 'solidity'
        [class~={'language-'+code}]:before
            content: code;