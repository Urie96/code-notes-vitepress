@require './iconfont.styl'
@require './variable.styl'
@require './zsh.styl'

.custom-block-abstract
  p
    margin 1em 0
  .title
    font-weight 600
    margin-bottom -0.4rem
  &.tip, &.warning, &.danger
    padding .1rem 1.5rem
    border-left-width .5rem
    border-left-style solid
    margin 1rem 0
  &.tip
    background-color var(--code-color)
    border-color #67cc86
    .title
      color #67cc86
  &.warning
    background-color var(--code-color)
    border-color #fb9b5f
    .title
      color #fb9b5f
  &.danger
    background-color var(--code-color)
    border-color #f26d6d
    .title
      color #f26d6d
  &.right
    color transparentify(#242424, 0.4)
    font-size 0.9rem
    text-align right
  &.theorem
    margin 1rem 0
    padding .1rem 1.5rem
    border-radius 0.4rem
    background-color var(--code-color)
    .title
      font-weight bold
  &.details
    display block
    position relative
    border-radius 2px
    margin 1em 0
    padding 1rem
    background-color var(--code-color)
    h4
      margin-top 0
    figure, p
      &:last-child
        margin-bottom 0
        padding-bottom 0
    summary
      outline none
      cursor pointer

html
  scroll-behavior: smooth;

hr 
    border: 0;
    border-top: 1px solid var(--border-color);

.custom-block.row
    display: flex
    padding: 0
    &>*
        flex-grow: 0.2
        margin: 0 2px !important
        overflow: hidden
        transition: all 0.5s ease-in-out !important
        &:hover
            flex-shrink:0.4
        &:last-child
            flex-grow: 1
    .language-terminal
      &>pre
        height: 100%

@media (max-width: $MQMobile)
  .custom-block.row
    margin: 16px -27px

